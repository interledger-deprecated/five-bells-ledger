{
  "name": "five-bells-ledger",
  "version": "17.0.0",
  "description": "Five Bells ledger reference implementation",
  "keywords": [
    "interledger",
    "five-bells",
    "ilp"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:interledgerjs/five-bells-ledger.git"
  },
  "scripts": {
    "start": "node src/app.js | bunyan",
    "start-prof": "node --prof --logfile=${LEDGER_V8_LOGFILE:-v8.log} src/app.js",
    "lint": "eslint .",
    "test": "istanbul test -- _mocha",
    "sqlplus": "LD_LIBRARY_PATH=/opt/oracle/instantclient DYLD_LIBRARY_PATH=/opt/oracle/instantclient /opt/oracle/instantclient/sqlplus system/oracle@localhost:1521/xe",
    "test-oracle": "LEDGER_UNIT_DB_URI='oracle://system:oracle@localhost:1521/xe' DYLD_LIBRARY_PATH=/opt/oracle/instantclient LD_LIBRARY_PATH=/opt/oracle/instantclient node node_modules/.bin/istanbul test -- _mocha",
    "report-coverage": "codecov",
    "docs": "npm run docs:prep-intro && npm run docs:apidoc",
    "docs:prep-intro": "scripts/build_docs.js",
    "docs:apidoc": "apidoc -o apidoc-out -i src/controllers/",
    "integration": "integration all",
    "bump": "version-bump",
    "drop-oracle-tables": "scripts/drop-oracle-tables.sh"
  },
  "engines": {
    "node": ">=0.12",
    "iojs": ">=1.5"
  },
  "dependencies": {
    "bignumber.js": "^2.3.0",
    "bunyan": "^1.8.1",
    "canonical-json": "0.0.4",
    "co": "^4.1.0",
    "co-body": "^4.0.0",
    "co-defer": "^1.0.0",
    "co-emitter": "^0.2.3",
    "co-request": "^1.0.0",
    "deep-diff": "^0.3.0",
    "eslint-plugin-standard": "^1.3.2",
    "five-bells-condition": "^3.2.0",
    "five-bells-shared": "^19.0.0",
    "knex": "^0.10.0",
    "koa": "^1.0.0",
    "koa-bunyan-logger": "^1.3.0",
    "koa-compress": "^1.0.6",
    "koa-cors": "0.0.16",
    "koa-mag": "^1.0.4",
    "koa-passport": "^1.1.6",
    "koa-router": "^5.1.2",
    "koa-static": "^1.4.5",
    "koa-websocket": "^2.0.0",
    "lodash": "^3.5.0",
    "methods": "^1.1.1",
    "moment": "^2.10.2",
    "passport-anonymous": "^1.0.1",
    "passport-client-certificate": "^0.1.1",
    "passport-http": "^0.3.0",
    "passport-http-signature": "^1.0.0",
    "priorityqueuejs": "^1.0.0",
    "spdy": "^3.2.3",
    "tweetnacl": "^0.13.1",
    "uuid4": "^1.0.0"
  },
  "optionalDependencies": {
    "mysql": "^2.9.0",
    "pg": "^4.4.1",
    "sqlite3": "^3.1.0",
    "tedious": "^1.12.3"
  },
  "devDependencies": {
    "apidoc": "^0.13.1",
    "bunyan-format": "^0.2.1",
    "chai": "^3.2.0",
    "co-mocha": "^1.1.0",
    "co-supertest": "0.0.10",
    "codecov": "^1.0.1",
    "ejs": "^2.5.1",
    "eslint": "^2.0.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-promise": "^1.1.0",
    "five-bells-integration-test": "^4.0.1",
    "istanbul": "0.4.0",
    "mocha": "~2.3.4",
    "nock": "^2.10.0",
    "sinon": "^1.14.1",
    "sinon-chai": "^2.7.0",
    "spec-xunit-file": "0.0.1-3",
    "supertest": "^1.1.0",
    "through2": "^2.0.1",
    "ws": "^1.1.0"
  }
}
